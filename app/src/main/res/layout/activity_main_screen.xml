<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <FrameLayout
        android:id="@+id/fragmentMainScreenContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="49dp"
        >

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/tabIndicatorRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">


        <View
            android:id="@+id/separatorView"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ColorInactiveGray" />

        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:id="@+id/menuBottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@color/bottom_items_color"
            app:itemTextColor="@color/bottom_items_color"
            app:menu="@menu/main_menu_bottom_navigation" />

    </RelativeLayout>

</RelativeLayout>