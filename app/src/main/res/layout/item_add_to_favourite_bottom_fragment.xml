<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/ColorWhite">

    <RelativeLayout
        android:id="@+id/itemMainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/listTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="test"
            android:textColor="@color/ColorBlackLight"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/countRelativeLayout"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/addRelativeLayout">

            <ImageView
                android:id="@+id/countImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_grey_rounded_border" />

            <TextView
                android:id="@+id/countTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="12"
                android:textAlignment="center"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/addImageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/button_grey_rounded_fill" />

            <ImageView
                android:id="@+id/addIconImageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/checkmark_blue" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/loadingRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/loadingImageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/button_blue_rounded_fill" />

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/checkMarkImageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:src="@drawable/checkmark_white"
                />

        </RelativeLayout>

        <View
            android:id="@+id/separatorView"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/ColorBorder" />


    </RelativeLayout>


</RelativeLayout>